<header>
  <h1>All Jobs
  <% if @company %>
 for <%= @company.name %>
<% end %>
<% if @location %>
 in <%= @location %></h1>
<% end %>
</header>
<table>
  <tr>
    <th></th>
    <th></th>
    <th>Role</th>
  </tr>
  <% @jobs.each do |job| %>
    <tr class=job_<%= job.id %>>
      <td><%= link_to "Edit", edit_company_job_path(job.company, job) %></td>
      <td><%= link_to "Delete", company_job_path(job.company, job), method: "delete" %></td>
      <td><%= link_to job.title, company_job_path(job.company, job) %></td>
    </tr>
  <% end %>
</table>
