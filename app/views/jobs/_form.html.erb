<div>
  <%= form_for [@company, @job] do |f| %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :title %></br>

    <%= f.label :company_id %>
    <%= f.collection_select :company_id, Company.all, :id, :name %></br>

    <%= f.label :title %>
    <%= f.text_field :title %></br>

    <%= f.label :description %>
    <%= f.text_field :description %></br>

    <%= f.label :level_of_interest, "Rating (1-10)" %>
    <%= f.number_field :level_of_interest, in: 1..10, step: 1 %></br>

    <%= f.label :city %>
    <%= f.text_field :city %></br></br>

    <%= f.submit %></br>
    <%= link_to 'Cancel', companies_path %>
  <% end %>
</div>
