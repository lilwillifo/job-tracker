<%= form_for [@company, @job, @categories] do |f| %>
  <%= f.label :category_id %>

  <select name="job[category_id]" id='categories'>
    <% @categories.each do |category| %>
      <option value ="<%= category.id %>"> <%= category.title %></option>
    <% end %>
  </select></br>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
