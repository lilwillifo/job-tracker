<ul>
  <%= form_for [@company, @job] do |f| %>

    <li><%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :title %>
    <%= link_to 'Create a New Category', new_category_path %></li>

    <li><%= f.label :title %>
    <%= f.text_field :title %></li>

    <li><%= f.label :description %>
    <%= f.text_field :description %></li>

    <li><%= f.label :level_of_interest, "Rating (1-10)" %>
    <%= f.number_field :level_of_interest, in: 1..10, step: 1 %></li>

    <li><%= f.label :city %>
    <%= f.text_field :city %></li>

    <li><%= f.submit %></li>
  <% end %>
</ul>
