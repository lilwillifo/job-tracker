<h3>Create a Contact</h3>

<%= form_for [ @company, @contact ] do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :role %><br/>
    <%= f.text_field :role %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
