<header>
  <h1><%= @company.name %></h1>
</header>
<main>
  <h2><%= link_to 'Jobs', company_jobs_path(@company) %></h2>
  <%= link_to "Edit", edit_company_path(@company) %>
  <%= link_to "Delete", company_path(@company), method: "delete" %>
  <%= render partial: 'contacts/form' %>
  <h2>Existing contacts (<%= @company.contacts.size %>)</h2>
  <%= render partial: 'companies/contact', collection: @company.contacts %>>
</main>
